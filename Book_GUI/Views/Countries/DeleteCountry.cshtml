@model BookApiProject.Dtos.CountryDto


@{
    ViewData["Title"] = "Delete-Country";
}

<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<h2>County Name : @Model.Name ?</h2> <br />

<form asp-controller="Countries" asp-action="DeleteCountry" asp-route-countryid="@Model.Id" asp-route-countryName="@Model.Name" method="post">
    <dialog>
        <p>
            <strong>Country Name</strong> : @Model.Name
        </p>
    </dialog>
    <input value="Delete Country" class="btn btn-outline-danger" type="submit" /> 
    <a asp-controller="Countries" asp-action="GetCountryById" asp-route-countryid="@Model.Id" class="btn btn-outline-primary"> | Cancel</a>
</form>

