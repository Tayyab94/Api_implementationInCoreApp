@model IEnumerable<BookApiProject.Dtos.CountryDto>
@{
    ViewData["Title"] = "Index";
}

<h1>@ViewBag.msg</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div>
    <h2>Countries List</h2>

    @foreach (var item in Model)
    {
        <p>

            <strong>@item.Name</strong>
            <a asp-action="GetCountryById" asp-controller="Countries" asp-route-countryId="@item.Id"> | Details</a>

            <a asp-action="DeleteCountry" asp-controller="Countries" asp-route-countryId="@item.Id"> | Delete Country</a>
        </p>
    }

</div>

