@model Book_GUI.ViewModels.ReviewReviewerBookViewModel
@{
    ViewData["Title"] = "Get-Reviewer-by-Id";
}

<div asp-validation-summary="ModelOnly" class="text-danger">
</div>
<div>
    <h6>@ViewBag.reviewMsg</h6>
    <h4>Review Detail - @Model.Book.Title</h4><br />
    <div>
        <p>
            <strong>Reviewer Name :</strong>
            <span>
                @Model.Reviewer.FirstName @Model.Reviewer.LastName
                <a asp-action="GetReviewerById" asp-controller="Reviewer" asp-route-reviewerid="@Model.Reviewer.Id"> | Detail Reviewer</a>
                <a asp-action="DeleteReviewer" asp-controller="Reviewer" asp-route-reviewerid="@Model.Reviewer.Id"> | Delete Reviewer</a>
            </span>
        </p>

        <p>
            <strong>Book title :</strong>
            <span>
                @Model.Book.Title
                <a asp-action="GetBookById" asp-controller="Books" asp-route-bookrid="@Model.Book.Id"> | Detail Book</a>
                <a asp-action="DeleteBook" asp-controller="Books" asp-route-bookrid="@Model.Book.Id"> | Delete Book</a>
            </span>
        </p>



        <p>
            <strong>Review HeadLines</strong> @Model.Review.Headline
        </p>
        <p>
            <strong>Review Rating</strong> @Model.Review.Rating
        </p>

        <p>
            <strong>Review Text</strong> @Model.Review.ReviewText

        </p>
    </div>

    <br />
    <hr />
    <div class="form-group text-center">
        <a class="btn btn-sm btn-primary" asp-action="UpdateReview" asp-controller="Review" asp-route-reviewid="@Model.Review.id"> | Update Review</a>
        <a class="btn btn-sm btn-info" asp-action="DeleteReview"   asp-controller="Review" asp-route-reviewid="@Model.Review.id"> | Delete Review</a>
    </div>

</div>

